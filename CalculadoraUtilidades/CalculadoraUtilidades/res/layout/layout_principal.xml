<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/FrmTop"
            android:layout_width="match_parent"
            android:layout_height="100dp" >
            
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:paddingLeft="@dimen/activity_vertical_margin"
      android:paddingRight="@dimen/activity_vertical_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:showDividers="middle" >
                
            <TextView
                android:id="@+id/lbl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Días Hábiles Mes:"/>

            <EditText
                android:id="@+id/CantidadDiasHabiles"
                android:background="@drawable/campo_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="30" >

                <requestFocus />
            </EditText>
                
         	<Button
         	    android:id="@+id/btn_actual"
         	    android:layout_width="wrap_content"
         	    android:layout_height="fill_parent"
         	    android:layout_gravity="right"
         	    android:layout_marginLeft="5dp"
         	    android:background="@drawable/botones"
         	    android:text="Actual"
         	    android:textColor="#ffffff"
         	    android:textColorHint="#FFFFFF"
         	    android:textSize="15sp" />
            
            <Button
                android:id="@+id/btn_propuesta"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:background="@drawable/botones"
                android:text="Propuesta"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />
            
            <Button
                android:id="@+id/btn_resultados"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:background="@drawable/botones"
                android:text="Resultados"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
                
            </LinearLayout>            
            
		</FrameLayout>            
        
        <FrameLayout
            android:id="@+id/FrmBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal" >

		</FrameLayout>            

        <FrameLayout
            android:id="@+id/FrmFooter"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

 			<LinearLayout
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:layout_gravity="right"
 			    android:gravity="center_horizontal"
 			    android:showDividers="middle" >
                
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >
        
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" >

            <TextView
                android:id="@+id/ResulActualPropuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margenes_resultados"
                android:text="RESULTADO ACTUAL:"
                android:textSize="@dimen/tamano_resultados"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ResulPropuestaNueva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margenes_resultados"
                android:text="RESULTADO PROPUESTO:"
                android:textSize="@dimen/tamano_resultados"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/ResultadoGanacia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GANANCIA ADICIONAL:"
                android:textSize="@dimen/tamano_resultados"
                android:textStyle="bold" />

        </TableRow>
        
         </TableLayout>                
                
                
                
            </LinearLayout>  
		</FrameLayout>            


    </LinearLayout>
    

</RelativeLayout>
